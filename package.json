{
  "name": "unshell",
  "version": "0.0.4",
  "description": "Set your shell free",
  "author": "Romain Prignon <pro.rprignon@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/romainPrignon/unshell.git"
  },
  "bin": {
    "unshell": "dist/cli.js"
  },
  "main": "dist/core.js",
  "engines": {
    "node": "^8.0.0",
    "npm": "^5.3.0"
  },
  "scripts": {
    "build": "rm -rf dist/ && tsc",
    "lint": "tslint --project tsconfig.json",
    "release": "release-it",
    "test": "npm run build && jest --detectOpenHandles --forceExit --verbose",
    "test:coverage": "npm run test -- --coverage"
  },
  "dependencies": {
    "chalk": "2.4.1"
  },
  "devDependencies": {
    "@types/node": "^8.0.0",
    "husky": "1.1.2",
    "jest": "23.6.0",
    "release-it": "7.6.1",
    "tslint": "5.11.0",
    "tslint-config-standard": "8.0.1",
    "typescript": "3.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run test"
    }
  }
}
